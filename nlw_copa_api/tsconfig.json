{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["ESNext"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"baseUrl": ".",
		"removeComments": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@~/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.spec.ts"]
}
